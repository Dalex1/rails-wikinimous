<h1>Last articles:</h1>

<% @articles.each do |article| %>


<div class="row card">
  <div class="col-md-12">
    <h2><%= article.title %></h2>
  </div>
  <div class="col-md-12">
    <p><%= article.content %></p>
  </div>
  <div class="col-md-12">
    <%= link_to "See more /", article_path(article) %>
    <%= link_to "Edit article /", edit_article_path(article) %>
    <%= link_to "Delete", article_path(article), method: :delete %>
  </div>
</div>

<% end %>

